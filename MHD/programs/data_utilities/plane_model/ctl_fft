begin  plane_fft_control
  begin data_files_def
    mesh_file_head_ctl     'mesh/in'
    field_file_head_ctl    'field/out'
  end data_files_def
!
  begin new_data_files_def
    new_mesh_head_ctl       'mesh_new/in'
    new_rst_head_ctl      'rst_new/rst'
    new_udt_head_ctl       'outall'
  end new_data_files_def
!
  begin plane_spectr_file_def
    plane_spectr_mode_head       'spectr/spec_mode'
    plane_spectr_data_head       'spectr/spectral'
    plane_spectr_ene_head        'spectr/ene_spec'
    plane_spectr_horiz_ene_head  'spectr/ene_spec'
  end plane_spectr_file_def
!
!    num_node_ctl: number of node (x, y, z)
!    length_unit_ctl: unit length (one or pi)
!    domain_size_ctl: size of domain (x, y, z)
!    horizontal_grid_ctl: horizontal grid type
!       (equi_distance, half_Chebyshev, or Chebyshev)
!
  begin plane_mesh_ctl
    nnod_plane_ctl        24     24     24      end
    ndomain_plane_ctl      1      1      1      end
!    unit_len_plane_ctl    one    one    one     end
!    plane_size_ctl      1.0e0  1.0e0  1.0e0   end
!    horizontal_grid_ctl   Chebyshev
!    num_of_sleeve_ctl    2
  end plane_mesh_ctl
!
  begin new_plane_mesh_ctl
    nnod_plane_ctl        16     16     16      end
    ndomain_plane_ctl      1      1      1      end
!    unit_len_plane_ctl    one    one    one     end
!    plane_size_ctl      1.0e0  1.0e0  1.0e0   end
!    horizontal_grid_ctl   Chebyshev
!    num_of_sleeve_ctl    2
  end new_plane_mesh_ctl
!
  begin model
    begin phys_values_ctl
      array nod_value_ctl   8
        nod_value_ctl  velocity            Viz_On   Monitor_On    end
        nod_value_ctl  temperature         Viz_On   Monitor_On    end
        nod_value_ctl  pressure            Viz_On   Monitor_On    end
        nod_value_ctl  vector_potential    Viz_On   Monitor_On    end
        nod_value_ctl  magnetic_field      Viz_On   Monitor_On    end
        nod_value_ctl  magnetic_potential  Viz_On   Monitor_On    end
        nod_value_ctl  vorticity           Viz_On   Monitor_On    end
        nod_value_ctl  current_density     Viz_On   Monitor_On    end
      end array nod_value_ctl
    end phys_values_ctl
  end model
!
  begin control
    begin time_step_ctl
      i_step_init_ctl       0
      i_step_number_ctl     2000
      i_step_field_ctl      800
      i_step_rst_ctl        800
!
      dt_ctl                1.0e-6
      time_init_ctl         5.0e-1
    end time_step_ctl
  end control
!
end plane_fft_control
