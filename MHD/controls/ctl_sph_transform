    zm_spectr_head_ctl     'sph_spectr/zm_spectr'
    zm_ene_spec_head_ctl   'sph_spectr/zm_ene_spec'
!
    zonal_udt_head_ctl     'zm_field/zm_spectr'
  end
!
!
  begin visual_control
